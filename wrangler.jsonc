{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "cf-next-llm-app",
  "main": ".open-next/worker.js",
  "compatibility_date": "2024-12-18",
  "compatibility_flags": ["nodejs_compat"],

  // Static assets binding (required for OpenNext)
  "assets": {
    "binding": "ASSETS",
    "directory": ".open-next/assets"
  },

  // Observability for monitoring and logs
  "observability": {
    "enabled": true
  },

  // D1 Database binding
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "cf-next-llm-db",
      "database_id": "YOUR_D1_DATABASE_ID",
      "migrations_dir": "drizzle/migrations"
    }
  ],

  // R2 bucket for logs storage
  "r2_buckets": [
    {
      "binding": "LOGS_BUCKET",
      "bucket_name": "cf-next-llm-logs"
    }
  ],

  // Environment variables (secrets should be set via `wrangler secret put`)
  "vars": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_APP_URL": "https://your-app.workers.dev"
  }
}
