# =============================================================================
# Application Configuration
# =============================================================================

NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# Database Configuration
# =============================================================================

# Local SQLite database path (used in development)
DATABASE_URL=file:./local.db

# Cloudflare D1 credentials (required for production migrations via drizzle-kit)
# Get these from Cloudflare Dashboard > Workers & Pages > D1
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_DATABASE_ID=
CLOUDFLARE_D1_TOKEN=

# =============================================================================
# Authentication (Auth.js / NextAuth.js)
# =============================================================================

# Generate with: openssl rand -base64 32
AUTH_SECRET=

# Trust host header in production (required for Cloudflare Workers)
AUTH_TRUST_HOST=true

# OAuth Providers (optional - uncomment and configure as needed)
# Google OAuth - https://console.developers.google.com/
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# GitHub OAuth - https://github.com/settings/developers
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# OpenAI API - https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google Gemini API - https://aistudio.google.com/apikey
GEMINI_API_KEY=

# Default LLM provider: "openai" or "gemini"
DEFAULT_LLM_PROVIDER=openai

# =============================================================================
# Cost Tracking & Logging
# =============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable cost tracking for LLM API calls
ENABLE_COST_TRACKING=true

# Alert threshold for cost tracking (in USD per day)
COST_ALERT_THRESHOLD=10.00

# Cloudflare R2 bucket for log storage (optional)
# CLOUDFLARE_R2_BUCKET=

# =============================================================================
# Python Services Integration (Optional)
# =============================================================================

# URL of the Python microservice (if enabled)
PYTHON_SERVICE_URL=http://localhost:8000

# Shared secret for service-to-service authentication
# Generate with: openssl rand -base64 32
PYTHON_SERVICE_SECRET=

# =============================================================================
# Development Settings
# =============================================================================

# Enable development-only features
# DEV_SKIP_AUTH=false
